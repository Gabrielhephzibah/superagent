<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Confirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:background="#153EAE"
        >

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-328dp"
            android:layout_marginTop="26dp"
            android:gravity="left"
            android:src="@drawable/arrow"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="27dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    app:fontFamily="@font/lato_bold"/>
                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="234561020940832"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    app:fontFamily="@font/lato_bold" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/lato_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"

                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:text="209.72"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#fff"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:text="GHC"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_bold"

                        />




                </LinearLayout>


            </LinearLayout>








        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="14dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:paddingTop="10dp"
            android:text="Enter your personal security PIN code."
            android:textColor="#4F4F4F"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="7dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/lock"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="18dp"
                    android:hint="Pin"
                    android:text="****"
                    android:inputType="number"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/DepositBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="12dp"
                android:background="@drawable/hover_button"
                android:text="Deposit"
                android:textColor="#ffff"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="@font/nunito"/>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Details"
                android:textColor="#4F4F4F"
                android:textSize="28sp"
                android:fontFamily="@font/lato_bold"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction Type"
                    android:textColor="#4F4F4F"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato"
                    />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deposit"
                android:textSize="18dp"
                android:textColor="#4F4F4F"
                android:fontFamily="@font/lato_bold"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#4F4F4F"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18dp"
                android:textColor="#4F4F4F"
                android:fontFamily="@font/lato_bold"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#4F4F4F"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+233 989 433 8475"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textColor="#4F4F4F"
                android:fontFamily="@font/lato_bold"
                />


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#4F4F4F"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                />
Ã¥
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="150.00"
                android:textSize="18dp"
                android:textColor="#4F4F4F"
                android:fontFamily="@font/lato_bold"
                />

            <Button
                android:id="@+id/cancelTrancBtn"
                android:layout_marginTop="23dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:text="Cancel Transaction"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />



        </LinearLayout>



    </LinearLayout>

</LinearLayout>