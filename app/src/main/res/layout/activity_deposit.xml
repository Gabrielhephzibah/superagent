<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Deposit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="#153EAE"
        >

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-328dp"
            android:layout_marginTop="26dp"
            android:gravity="left"
            android:src="@drawable/arrow"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="27dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    app:fontFamily="@font/lato_bold"/>
                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="234561020940832"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    app:fontFamily="@font/lato_bold" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/lato_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"

                    >
                    <TextView
                        android:id="@+id/fixed"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:text="209.72"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#fff"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:text="GHC"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_bold"

                        />




                </LinearLayout>


            </LinearLayout>








            </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="19dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deposit"
            android:textSize="26dp"
            android:textColor="#4F4F4F"
            android:fontFamily="@font/lato_bold"
            android:paddingTop="12dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/telephone"
                    android:drawablePadding="18dp"
                    android:hint="Phone no"
                    android:inputType="number"
                    android:textColorHint="#4F4F4F"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginTop="-8dp"
                    android:background="#2553CF"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:text="*Enter phone number to request credit from"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/amount"
                    android:drawablePadding="18dp"
                    android:hint="0.00"
                    android:textColorHint="#4F4F4F"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/hint2"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginTop="-8dp"
                    android:background="#2553CF"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:text="*Recieve this much in credit (same as amount of cash recieved)"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:visibility="invisible" />


            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/depositBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="14dp"
                    android:background="@drawable/hover_button"
                    android:text="Deposit"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"/>






            </LinearLayout>





        </LinearLayout>




    </LinearLayout>

</LinearLayout>