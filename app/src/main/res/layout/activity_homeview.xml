<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Homeview">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="vertical"
            android:background="@drawable/blue_template">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="19dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    app:fontFamily="@font/lato_bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0101010101010101"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    app:fontFamily="@font/lato_bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp"
                    android:text="Credit"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/lato_bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:text="209.72"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#fff"
                        android:textSize="53sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:text="GHC"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_bold"

                        />




                </LinearLayout>


            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/depositBtn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/small_blue_template"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deposits"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/nunito"/>

            </LinearLayout>

              <LinearLayout
                android:id="@+id/WithdrawalBtn"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_weight="1"
                  android:layout_marginLeft="10dp"

                android:background="@drawable/small_blue_template"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/withdrawal"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Withdrawal"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/nunito"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:id="@+id/trasaction"
                android:layout_width="175dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/small_blue_template"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/transaction"
                    android:paddingTop="37dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction History"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/nunito"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="175dp"
                android:layout_weight="1"
                android:layout_height="125dp"
                android:background="@drawable/small_blue_template"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/support"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/nunito"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">


            <Button
                android:id="@+id/logOutBtn"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/button"
                android:text="Log Out"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:fontFamily="@font/lato"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>